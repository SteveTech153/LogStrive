<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:buttonBarButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonStyle">@style/DialogButtonStyle</item>
        <item name="android:buttonStyle">@style/DialogButtonStyle</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/purple_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="CustomSpinner">
        <item name="dropDownBackgroundTint">@color/darkblue2</item>
        <item name="spinnerDropDownItemStyle">@style/CustomSpinnerItem</item>
        <item name="android:spinnerItemStyle">@style/CustomSpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/CustomSpinnerItem</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#8DD1D5</item>
    </style>
    <style name="CustomSpinnerItem" parent="android:TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/ligtcement</item>
    </style>
</resources>