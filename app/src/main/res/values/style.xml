<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:buttonBarButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonStyle">@style/DialogButtonStyle</item>
        <item name="android:buttonStyle">@style/DialogButtonStyle</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/purple_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="CustomSpinner">
        <item name="dropDownBackgroundTint">@color/darkblue2</item>
        <item name="spinnerDropDownItemStyle">@style/CustomSpinnerItem</item>
        <item name="android:spinnerItemStyle">@style/CustomSpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/CustomSpinnerItem</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#8DD1D5</item>
    </style>

    <style name="CustomSpinnerItem" parent="android:TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/ligtcement</item>
    </style>
    <style name="CustomAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorAccent">@color/dialog_btn_color</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/ligtcement</item>
    </style>
    <style name="DarkCalendarView" parent="Widget.Material3.MaterialCalendar">
        <item name="android:background">#00AAAAAA</item>
        <item name="android:textColorPrimary">@color/ligtcement</item>
        <item name="android:textColorSecondary">#B0B0B0</item>
        <item name="android:weekDayTextAppearance">@style/CalendarViewWeekDayDark</item>
        <item name="android:dateTextAppearance">@style/CalendarViewDateDark</item>
        <item name="android:calendarViewShown">true</item>
    </style>

    <style name="CalendarViewWeekDayDark" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/ligtcement</item>
    </style>

    <style name="CalendarViewDateDark" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/ligtcement</item>
    </style>

</resources>